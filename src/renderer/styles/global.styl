/**
 * Reset styles
 */
*
  margin 0
  padding 0
  min-width 0
  scroll-behavior smooth

/**
 * Right way to disable text selection,
 * html elements dragging and some browser like stuff
 */
:not(input):not(textarea),
:not(input):not(textarea)::after,
:not(input):not(textarea)::before
  user-select none

input, button, textarea, :focus
  outline none

a:not([draggable=true]), img:not([draggable=true])
  -webkit-user-drag none

a
  color inherit
  text-decoration none
  display block
  cursor pointer


/**
 * Basic global styles
 */
html
  font-family Inter, sans-serif
  font-size 14px
  line-height 18px

/**
 * Layout class generator
 */
generateLayoutClasses($layout-grid)
  for $n in $layout-grid
    /** Margin classes */
    &m-{$n}
      margin $n * 1px

    &mt-{$n}
      margin-top $n * 1px

    &mr-{$n}
      margin-right $n * 1px

    &mb-{$n}
      margin-bottom $n * 1px

    &ml-{$n}
      margin-left $n * 1px

    /** Padding classes */
    &p-{$n}
      padding $n * 1px

    &pt-{$n}
      padding-top $n * 1px

    &pr-{$n}
      padding-left $n * 1px

    &pb-{$n}
      padding-bottom $n * 1px

    &pl-{$n}
      padding-left $n * 1px

/**
 * Layout helper classes .l-{style}-{value}
 *
 * @example
 *   `l-mt-8` means `margin-top: 8px`
 */
.l-
  $sizes = 4, 8, 10, 12, 16, 18, 24, 36, 48
  generateLayoutClasses($sizes)

/**
 * Font weight 500
 */
.l-fw-m
  font-weight 500

/**
 * Font size 12px
 */
.l-fs-12
  font-size 12px

/**
 * Font size 18px
 */
.l-fs-18
  font-size 18px

/**
 * Scroll bar styles
 */
@css{
  .scroll{
    overflow: hidden overlay;
  }
  .scroll--vh{
    overflow: overlay;
  }
  .scroll::-webkit-scrollbar {
    width: 7px;
    box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0);
    border: solid 2px transparent;
    border-radius: 100px;
  }
  .scroll::-webkit-scrollbar:horizontal {
    height: 7px;
  }
  .scroll:hover::-webkit-scrollbar{
      box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0.05);
  }

  .scroll::-webkit-scrollbar-thumb {
    box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0);
    border-radius: 100px;
    border: solid 2px transparent;
  }

  .scroll::-webkit-scrollbar:hover{
      border: solid 1px transparent;
      box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0.08);
  }

  .scroll::-webkit-scrollbar-thumb:hover{
      border: solid 1px transparent;
      box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0.2);
  }

  .scroll:hover::-webkit-scrollbar-thumb{
      box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0.15);
  }

  .scroll::-webkit-scrollbar-thumb:active {
    box-shadow: inset 0 0 10px 10px rgba(var(--scroll-bar), 0.35);
  }

  .scroll::-webkit-scrollbar-corner{
    background: transparent;
  }

}

/**
 * All video elements with grey background
 */
video
  background var(--button-bg-5)
